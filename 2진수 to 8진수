#include<bits/stdc++.h>
using namespace std;
int main() {
	string s; cin >> s;
	string ans = "";
	while (s.length() % 3 != 0)
		s = "0" + s;
	for (int i = 0; i < s.length(); i++) {
		if (i % 3 == 0) {
			string t = s.substr(i, 3);
			if (t == "000") ans += "0";
			else if (t == "001") ans += "1";
			else if (t == "010") ans += "2";
			else if (t == "011") ans += "3";
			else if (t == "100") ans += "4";
			else if (t == "101") ans += "5";
			else if (t == "110") ans += "6";
			else if (t == "111") ans += "7";
		}
	}
	cout << ans;
}
